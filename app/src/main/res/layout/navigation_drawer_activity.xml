<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgraund">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:id="@+id/nav_contentframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">


        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_400px"
            android:background="#22000000"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/dimValue_10">

                <com.example.deii.Utils.AnimatedExpandableListView
                    android:id="@+id/startHereMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/dimValue_10">

                <com.example.deii.Utils.AnimatedExpandableListView
                    android:id="@+id/horizonMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/dimValue_10">

                <com.example.deii.Utils.AnimatedExpandableListView
                    android:id="@+id/healerMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/dimValue_10">

                <com.example.deii.Utils.AnimatedExpandableListView
                    android:id="@+id/lockedTopicsMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />
            </RelativeLayout>



            <com.andexert.library.RippleView
                android:id="@+id/rippleShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                ripple:rv_type="rectangle"
                ripple:rv_zoom="true">

                <LinearLayout
                    android:id="@+id/linShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimValue_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimValue_5"
                        android:src="@drawable/share_icon" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimValue_5"
                        android:text="Share App"
                        android:textColor="@color/sign_up_blue_color"
                        android:textSize="@dimen/dimTextSize_18"
                        pixlui:typeface="Roboto-Medium.ttf" />

                </LinearLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/rippleLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionbar"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:onClick="Logout"
                android:background="#ffffff"
                ripple:rv_type="rectangle"
                ripple:rv_zoom="true">

                <LinearLayout
                    android:id="@+id/linLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimValue_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimValue_5"
                        android:src="@drawable/logout_icon" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimValue_5"
                        android:text="Log Out"
                        android:textColor="@color/sign_up_blue_color"
                        android:textSize="@dimen/dimTextSize_18"
                        pixlui:typeface="Roboto-Medium.ttf" />

                </LinearLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>